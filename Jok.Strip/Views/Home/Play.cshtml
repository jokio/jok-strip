@{
    ViewBag.Title = "Play";
}



<h2>Play</h2>

<style type="text/css">
    #divKeyboard button {
   background-color:red;
         }
</style>

<div style="width: 800px; height: 600px; background-color: lightblue; margin:auto;">

    
        <div id="canvasOne" style="color: lightblue">
            
        </div>

    <div id="divKeyboard" class=" width:800; margin:auto; background-color: lightblue">

    </div>
</div>
<script type="text/javascript">
    window.addEventListener("load",
   function (event) {
       for (var i = 97; i <= 122; i++) {
           var char = String.fromCharCode(i);
           var btn = document.createElement("button");
           var t = document.createTextNode(char);
           btn.appendChild(t);
           btn.id = 'btn' + char;
           btn.innerText = char;
           btn.value = char;
           btn.addEventListener("click", function (e) {
               window["gameClient"].sendCommand("msg", { code: -1, data: e.target.innerHTML });
           }, true);
           document.getElementById("divKeyboard").appendChild(btn);
       }
   }, true);
</script>

