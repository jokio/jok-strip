@{
    ViewBag.Title = "Play";
}



<h2>Play</h2>
<div id="divChat">
</div>
<input id='inpchat' />
<input type="button" id="btnChat" />
<div style="width: 800px; height: 600px; margin: auto; background-color: lightblue; text-align: center;">

    
        <canvas id="canvasOne" width="600" height="400">
            Your Browser Does Not Support HTML5 Canvas!
        </canvas>



    <div id="divKeyboard" class="keyboard">

    </div>
</div>
<script type="text/javascript">

    window.addEventListener("load",
   function (event) {
       for (var i = 97; i <= 122; i++) {
           var char = String.fromCharCode(i);
           var btn = document.createElement("BUTTON");
           var t = document.createTextNode(char);
           btn.appendChild(t);
           btn.id = 'btn' + char;
           btn.innerText = char;
           btn.value = char;
           btn.addEventListener("click", function (e) {
               window["gameClient"].sendCommand("msg", { code: -1, data: e.target.innerHTML });
           }, true);
           document.getElementById("divKeyboard").appendChild(btn);
       }
   }, true);
</script>

