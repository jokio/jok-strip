@{
    ViewBag.Title = "Play";
}



<h2>Play</h2>
<div id="divChat">
</div>
<input id='inpchat' />
<input type="button" id="btnChat" />
<div style="width: 800px; height: 600px; margin: auto; background-color: lightblue; text-align: center;">

    <div id="gamers" style="width:600px;height:200px; padding-top:10px; margin:auto;">
        <div id="divMe" style="width: 270px; height: 150px; background-color: #e4f5ff; margin:auto; float:left;">
            <label id="lbMtext"></label><br />
            <label id="lbMans"></label><br />
            <label id="lbMtime"></label><br />
        </div>
        <div id="divFr" style="width: 270px; height: 150px; background-color: #FACEB0; margin: auto; float: right;">
            <label id="lbFtext"></label><br />
            <label id="lbFans"></label><br />
            <label id="lbFtime"></label><br />
        </div>

    </div>


    <div id="divKeyboard" class="keyboard">

    </div>
</div>
<script type="text/javascript">

    window.addEventListener("load",
   function (event) {
       for (var i = 97; i <= 122; i++) {
           var char = String.fromCharCode(i);
           var btn = document.createElement("BUTTON");
           var t = document.createTextNode(char);
           btn.appendChild(t);
           btn.id = 'btn' + char;
           btn.innerText = char;
           btn.value = char;
           btn.addEventListener("click", function (e) {
               window["gameClient"].sendCommand("msg", { code: -1, data: e.target.innerHTML });
           }, true);
           document.getElementById("divKeyboard").appendChild(btn);
       }
   }, true);
</script>

